{
  "name": "photography-portfolio",
  "version": "1.0.0",
  "scripts": {
    "dev": "onchange 'script.js' 'style.css' -- npm run build",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss style.css --use=autoprefixer | cssmin > style.min.css",
    "build:js": "minify script.js > script.min.js"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "cssmin": "^0.4.3",
    "minify": "^6.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.1.3",
    "postcss-cli": "^8.1.0"
  },
  "author": "Ivelin Mollov",
  "license": "ISC"
}
